%table.table.table-striped
  %thead
    %tr
      %th Areacode
      %th Confessed At
      %th
      %th
  %tbody
    - @confessions.each do |confession|
      %tr
        %td= link_to confession.areacode, confession
        %td= confession.created_at
        %td= link_to 'Edit', edit_confession_path(confession), :class => 'btn btn-mini'
        %td= link_to 'Destroy', confession, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger'

