= form_for @confession, :html => { :class => 'form-horizontal' } do |f|
  -if @confession.errors.any?
    #error_explanation
      %h2= "#{pluralize(@confession.errors.count, "error")} prohibited this confession from being saved:"
      %ul
        - @confession.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend
      = controller.action_name.capitalize
      Confession
    .control-group
      = f.label :areacode, :class => 'control-label'
      .controls
        = f.text_field :areacode, :class => 'text_field'
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to 'Cancel', confessions_path, :class => 'btn'